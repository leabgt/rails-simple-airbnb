<h1>All our flats (<%= @flats.length %>)</h1>

<div class="flat-cards">
  <% @flats.each do |flat| %>
    <div class="flat-card">
      <div class="card-content">
        <h2><%= flat.name %></h2>
        <p><%= flat.address %></p>
        <i class="fas fa-user-friends"> <%= flat.number_of_guests %></i>
        <i class="fas fa-euro-sign"> <%= flat.price_per_night %></i>
      </div>
      <div class="link">
        <%= link_to "More info", flat_path(flat) %>
        <%= link_to "Edit", edit_flat_path(flat) %>
        <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
</div>
